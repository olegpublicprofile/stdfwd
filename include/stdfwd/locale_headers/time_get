#pragma once

#include "../stdfwd_details.hpp"

//------------------------------------------------------------------------------

STDFWD_STD_BEGIN

	STDFWD_CPP11_BEGIN
	template< class charT, class InputIterator > class time_get;
	STDFWD_CPP11_END

STDFWD_STD_END

//------------------------------------------------------------------------------

namespace stdfwd
{
	template< class charT, class InputIterator = istreambuf_iterator< charT> >
	using time_get = std::time_get< charT, InputIterator >;
}

